<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#873F9F"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="1dp"
            android:maxLines="1"
            android:gravity="center"
            android:text="My profile"
            android:textColor="#F8F1F1"
            android:textSize="40dp"
            android:textStyle="bold" />



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profilepic"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit profile"
        android:drawableLeft="@drawable/editprofile"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textAppearance= "@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account settings"
        android:layout_marginStart="5dp"
        android:drawableLeft="@drawable/accountsettings"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance= "@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:drawableLeft="@drawable/invite"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textAppearance= "@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp" />




    <Switch
        android:id="@+id/pushnotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Push notification"
        android:layout_marginStart="5dp"
        android:textSize="25dp"/>

    <Switch
        android:id="@+id/darkmode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dark mode"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:drawableLeft="@drawable/signout"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textAppearance= "@style/Base.TextAppearance.AppCompat.Large"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#E1F4F2F3"
            app:itemIconTint="#060606"
            app:itemTextColor="#090808"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_menu"
            tools:ignore="MissingConstraints" />



    </LinearLayout>


</LinearLayout>