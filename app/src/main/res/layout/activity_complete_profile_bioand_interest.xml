<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteProfileBIOandInterest">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="1dp"
            android:maxLines="1"
            android:text="Complete your profile"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView

            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="  Add bio" />
        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:gravity="start"
            android:layout_height="120dp"
            android:background="@drawable/textinputborder"
            android:layout_marginStart="20dp"
            android:text="Hey! I am Mike, a surf entusiast and ...."
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:layout_marginEnd="20dp"
            android:padding="5dp">
        </EditText>
        <TextView

            android:layout_marginTop="5dp"
            android:id="@+id/onceselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B8787"
            android:layout_marginStart="20dp"
            android:textSize="15dp"
            android:text=" Max. 500 characters" />

        <TextView

            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/yourinterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="  Your Interests" />

        <TextView

            android:layout_marginTop="5dp"
            android:id="@+id/multipleselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8B8787"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:text=" You can select multiple" />

        <Button
            android:id="@+id/registerbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Next"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:theme="@style/Theme.Button"
            android:background="@drawable/stylishloginbtn"
            android:layout_marginTop="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>
</LinearLayout>